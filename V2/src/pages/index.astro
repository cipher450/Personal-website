      </div>
    </div>
  </div>

  <script>
    import ScrollReveal from "scrollreveal";
    function AnimateScroling() {
      var slideright = {
        distance: "100%",
        origin: "left",
        opacity: null,
        duration: 1000,
        delay: 750,
      };
      var slideup = {
        delay: 750,
        duration: 1500,
        opacity: 0,
        distance: "50%",
        origin: "top",
      };
      ScrollReveal().reveal(".Slide1", slideup);
      ScrollReveal().reveal(".slide2", slideup);
    }
    AnimateScroling();
  </script>
