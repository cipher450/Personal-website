---

<Layout title="Project's">
  <div class="projects--container">
    <div class="flex m-auto gap-5 items-center justify-start ">
      <img src="/assets/logos/Webapp.svg" alt=""  class="lg:w-32 w-12" />
      <h1 class="lg:text-5xl text-2xl text-center m-2">
        Web applications
      </h1>
    </div>
    <div class="project--warrper">
      <ProjectSwiper data={WebProjects} client:load />
    </div>
  </div>

  <div class="projects--container">
    <div class="flex m-auto gap-5 items-center">
      <img src="/assets/logos/desktop.svg" alt="" width="100px" />
      <h1 class="lg:text-5xl text-4xl text-center mb-5 mt-5">
        Desktop applications
      </h1>
    </div>
    <ProjectSwiper data={DesktopProjects} client:load />
  </div>

  <div class="projects--container">
    <div class="flex m-auto gap-5 items-center">
      <img src="/assets/logos/bot.svg" alt="" width="100px" />
      <h1 class="lg:text-5xl text-4xl text-center mb-5 mt-5">Bots</h1>
    </div>
    <ProjectSwiper data={Bots} client:load />
  </div>
</Layout>
